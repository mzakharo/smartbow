<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .1]
            orientation: "horizontal"
            Button:
                text: "To Orientation"
                bold: True
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'orientation_screen'
            Button:
                id: toggle
                text: "STOP"
                bold: True
                on_press: root.on_press()
        BoxLayout:
            size_hint: [1, .9]
            Graph:
                id: graph
                y_grid_label : True
                y_grid: True

<OrientationScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .1]
            orientation: "horizontal"
            Button:
                text: "To Accelerometer"
                bold: True
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'
            Button:
                id: toggle
                text: "STOP"
                bold: True
                on_press: root.on_press()
        BoxLayout:
            orientation: "horizontal"
            size_hint: [1, .9]
            Graph:
                id: graph0
                y_grid_label : True
                y_grid: True
            Graph:
                id: graph1
                y_grid_label : True
                y_grid: True
            Graph:
                id: graph2
                y_grid_label : True
                y_grid: True



Screen:
    ScreenManager:
        id: sm
