Logic:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .9]
            Graph:
                id: graph
                y_grid_label : True
                y_grid: True
        BoxLayout:
            size_hint: [1, .1]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()

